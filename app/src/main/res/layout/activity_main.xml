<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/last_known_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="last_known_location"
        />

    <Button
        android:id="@+id/current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current_location"
        />

    <Button
        android:id="@+id/request_updates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="request_updates"
        />

    <Button
        android:id="@+id/remove_updates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remove_updates"
        />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>